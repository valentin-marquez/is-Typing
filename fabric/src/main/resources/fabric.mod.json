{
  "schemaVersion": 1,
  "id": "istyping",
  "version": "${version}",
  "name": "IsTyping",
  "description": "Lightweight typing indicator for Minecraft multiplayer that shows when other players are composing chat messages.",
  "authors": [
    "Nozz"
  ],
  "contact": {
    "homepage": "https://github.com/valentin-marquez/is-typing",
    "sources": "https://github.com/valentin-marquez/is-typing",
    "issues": "https://github.com/valentin-marquez/is-typing/issues"
  },
  "license": "MIT",
  "icon": "assets/istyping/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.nozz.it.fabric.IsTypingFabric"
    ],
    "client": [
      "com.nozz.it.fabric.client.IsTypingFabricClient"
    ]
  },
  "mixins": [
    "istyping.mixins.json",
    "istyping-common.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.17.2",
    "minecraft": "~1.20.1",
    "java": ">=17",
    "architectury": ">=9.2.14",
    "fabric-api": "*"
  }
}